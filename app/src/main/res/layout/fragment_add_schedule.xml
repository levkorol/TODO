        <LinearLayout
            android:id="@+id/add_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lichtpinck"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/timer_pick_image"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_margin="16dp"
                android:src="@drawable/ic_timer" />

            <TextView
                android:id="@+id/time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Назначить время выполнения" />

            <TextView
                android:id="@+id/clear_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="32dp"
                android:drawableStart="@drawable/ic_clear"
                android:gravity="center"
                android:text="Сбросить "
                android:textColor="@color/color_grey"
                android:visibility="gone"
                tools:visibility="visible" />

        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/palegray"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkBoxRepeat"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:text="Повтор" />

        <TextView
            android:id="@+id/interval_repeat"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:gravity="center"
            android:text="Интервал" />

        <TextView
            android:id="@+id/current_repeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Количество" />
    </LinearLayout>

