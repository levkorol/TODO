<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.target.fragments.MyTargetsFragment">


    <ImageView
        android:id="@+id/pick"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/lev22"
        android:visibility="gone" />

    <TextView
        android:id="@+id/no_target"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:text="Целей пока нет..."
        android:textColor="@color/textColorLight"
        android:visibility="gone" />

    <TextView
        android:id="@+id/add_target"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/bg_orange"
        android:gravity="center"
        android:padding="7dp"
        android:text="   Создать цель   "
        android:textAllCaps="false"
        android:textColor="@color/whiteText"
        android:textStyle="bold"
        android:visibility="gone" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_targets"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp"
        tools:listitem="@layout/item_target_list" />

</LinearLayout>