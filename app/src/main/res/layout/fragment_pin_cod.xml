<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pick_pin"
    android:orientation="vertical"
    tools:context=".ui.setting.pincode.PinCodFragment">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="132dp"
        android:text="Введите пароль:"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <com.levkorol.todo.views.PinEntryEditText
        android:id="@+id/vEnterPinCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="90dp"
        android:layout_marginTop="45dp"
        android:cursorVisible="false"
        android:digits="1234567890"
        android:inputType="number"
        android:maxLength="4"
        android:textColor="@color/white"
        android:textIsSelectable="false"
        android:textSize="20sp"
        app:pinAnimationType="fromBottom"
        app:pinBackgroundIsSquare="true"
        app:pinCharacterMask="*"
        app:pinLineColors="@color/white"
        app:pinLineStroke="2dp"
        app:pinLineStrokeSelected="3dp" />


