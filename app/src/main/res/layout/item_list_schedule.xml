<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayoutItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_hours_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginTop="4dp"
            android:text="0000"
            android:textSize="14sp" />
        <!--        <TextView-->
        <!--            android:id="@+id/tv_min"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_marginStart="13dp"-->
        <!--            android:text="00"-->
        <!--            android:textSize="14sp"-->
        <!--            android:layout_marginTop="4dp"-->
        <!--            />-->
        <ImageView
            android:id="@+id/iv_timer"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="-10dp"
            android:src="@drawable/ic_no" />


        <!--        <TextView-->
        <!--            android:id="@+id/date_vremenno"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_marginStart="16dp"-->
        <!--            android:layout_marginTop="4dp"-->
        <!--            android:text="14.00"-->
        <!--            android:textSize="16sp"-->
        <!--            android:textColor="@android:color/darker_gray"-->
        <!--            android:layout_toEndOf="@+id/tv_hours_min"/>-->

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cb_done"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tv_title_today"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="4dp"
            android:textColor="@color/textColorLight"
            android:textSize="18sp"
            tools:text="Сделать чoooo" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"
            android:textStyle="italic"
            tools:text="fggrgrwgergerger" />

        <ImageView
            android:id="@+id/btn_add_comment"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_gravity="end"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_add_comment" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/add_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <EditText
            android:id="@+id/ed_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="50dp"
            android:layout_weight="5"
            android:hint="Добавить комментарий..." />

        <ImageView
            android:id="@+id/ok"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginStart="-16dp"
            android:layout_marginEnd="26dp"
            android:layout_weight="0.1"
            android:src="@drawable/ic_ok" />

        <ImageView
            android:id="@+id/clear"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginEnd="16dp"
            android:layout_weight="0.1"
            android:src="@drawable/ic_clear" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/line" />
</LinearLayout>